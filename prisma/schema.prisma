generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  fullName       String
  email          String    @unique
  password       String
  phoneNumber    String
  role           Role      @default(USER)
  kycStatus      KycStatus @default(PENDING)
  otp            String?
  otpExpiresAt   DateTime?
  nid            String?
  address        String?
  kycDocumentUrl String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}

enum KycStatus {
  PENDING
  IN_REVIEW
  VERIFIED
  REJECTED
}

model Farm {
  id             String   @id @default(cuid())
  name           String
  category       String
  description    String?
  location       String?
  owner          String?
  roi            Float
  durationMonths Int
  targetFunding  Float
  collectedAmount Float   @default(0)
  riskLevel      String?
  status         String   @default("active")
  imageUrl       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
